package exchange;
import java.io.*;
import java.util.Scanner;

public class Command {
    public static void main(String[] args) {
        String amount,output;
        double money,baht=0;
        Exchange ex = new Exchange();

        try {
            FileWriter outfile = new FileWriter("D:/DT Study/OOP_LAB/26/EX.txt");
            FileReader infile = new FileReader("D:/DT Study/OOP_LAB/26/ExchangeList.txt");
            Scanner input = new Scanner(infile);
            while(input.hasNext()) {

                money = input.nextDouble();
                amount = input.next();
                output = String.format("%.2f %s = \t",money,amount);
                outfile.write(output);

                switch (amount) {
                    case "USD" -> baht = ex.exchangeUSD(money);
                    case "EURO" -> baht = ex.exchangeEURO(money);
                    case "YEN" -> baht = ex.exchangeYEN(money);
                    case "POUND" -> baht = ex.exchangePOUND(money);
                }
                output = String.format("%.2f Baht\n",baht);
                outfile.write(output+"\r\n");
            }
            output = String.format(">>> Summation = %.2f Baht\n",ex.getsum());
            outfile.write(output);
            infile.close();
            outfile.close();
        } catch (IOException error){
            error.printStackTrace();
        }
    }//end of main()
}
public class Exchange {
    public final double USD = 30.72 ;
    public final double EURO = 41.89 ;
    public final double YEN = 36.97 ;
    public final double POUND = 48.34 ;
    double money;
     double sum=0 ;

    public double exchangeUSD(double amount) {
        money = amount*USD;
        sum += money ;
        return money ;
    }
    public double exchangeEURO(double amount) {
        money = amount*EURO;
        sum += money ;
        return money ;
    }
    public double exchangeYEN(double amount) {
        money = amount*YEN;
        sum += money ;
        return money ;

    }
    public double exchangePOUND(double amount) {
        money = amount*POUND;
        sum += money ;
        return money ;
    }
    public double getsum() {
        return sum ;
    }
}